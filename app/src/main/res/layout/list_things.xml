<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wrapper_list_item"
    android:layout_margin="@dimen/dimen_8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:elevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:src="@drawable/nicolas_cage"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="5" />

    <!--Add 1dp bottom padding to remove weird flickering while animating-->


    <TextView
        android:id="@+id/text_view_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/XL_TEXT"
        android:textAllCaps="true"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:fontFamily="sans-serif-thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="RICHARD"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_margin="@dimen/dimen_8dp" />

    <TextView
        android:id="@+id/text_view_description"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/L_TEXT"
        android:padding="@dimen/dimen_8dp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/lorem_ipsum_short" />
    </LinearLayout>
</android.support.v7.widget.CardView>