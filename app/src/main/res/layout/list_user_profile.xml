<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimen_16dp"
    android:background="@color/white"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:src="@drawable/nicolas_cage"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#8BC34A"
            app:civ_shadow_radius="5" />

        <!--Add 1dp bottom padding to remove weird flickering while animating-->


        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/half_black"
            android:textSize="@dimen/text_size_profile_toolbar_title"
            android:textStyle="bold"
            tools:text="RICHARD" />

        <TextView
            android:id="@+id/txtOccupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_16dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/half_black"
            android:textSize="@dimen/text_size_profile_toolbar_title"
            tools:text="Occupation" />

        <TextView
            android:id="@+id/txtDscr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/half_black"
            android:textSize="18sp"
            android:textStyle="normal"
            tools:text="@string/lorem_ipsum_short" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:padding="@dimen/dimen_8dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:text="skill1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:padding="@dimen/dimen_8dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:text="Computer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:padding="@dimen/dimen_8dp"
                android:layout_margin="@dimen/dimen_8dp"
                android:text="Drawing"/>
        </LinearLayout>
        <View
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_16dp"
            android:background="@color/half_black" />

        <TextView
            android:id="@+id/txtViewProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/XXL_TEXT"
            android:textStyle="bold"
            tools:text="VIEW PROFILE" />

    </LinearLayout>
</android.support.v7.widget.CardView>